{
  "name": "SvelteKit-NPM",
  "image": "node:18",
  "settings": { 
      "terminal.integrated.shell.linux": "/bin/bash"
  },

  "extensions": [
      "svelte.svelte-vscode"
  ],
  
  "postCreateCommand": "pnpm install",
  "forwardPorts": [5000],
  
  "runArgs": [
      "--rm",
      "-it",
      "-p",
      "5000:5000"
  ]
}